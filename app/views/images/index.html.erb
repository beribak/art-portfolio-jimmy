<div class="d-flex">
  <div class="text-center px-4 pt-4 flex-grow-1 profile-info">
    <!-- <h2>Portfolio for Jimmy</h2> -->
    <div class="mb-4">
      <img src="http://nebula.wsimg.com/e974ce0da59fe2687f4b3ad5bd2752fb?AccessKeyId=7CF5232BAEE59A11F643&disposition=0&alloworigin=1" alt="" class="profile-picture">
    </div>
    <h2 class="heading">Jimmy Cortes</h3>
    <h4 class="sub_heading" >Make up artist</h6>
    <h5><%= link_to "About", infos_path, class: "" %></h5>
    <h5><%= link_to "Experiences", experiences_path, class: "" %></h5>
    <h5><%= link_to "Email", infos_path, class: "" %></h5>
    <%= link_to "Log out", destroy_user_session_path, method: :delete%>
    <%= link_to "Login", new_user_session_path%>
    <hr>
    <p class="mb-3">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quos dicta    laboriosam, cum, ullam aliquid praesentium mollitia.
    </p>
    <div class="">
      <a href="https://www.instagram.com/jimmycortes_/" target="_blank" class="links"><i class="fab fa-instagram" ></i></a>
      <a href="https://www.linkedin.com/in/jimmy-cort%C3%A9s-772b826b/" target="_blank" class="links"><i class="fab fa-linkedin "></i></a>
    </div>
  </div>
  <div class="container flex-item mt-4">
    <div class="row">
      <% @images.each do |image| %>
        <div class="col-3 mb-2">
          <div class="mb-1" >
            <%= image_tag image.photo, class: "image"%>
            <p class="image-text" style=""><%= image.description %></p>
            <% if user_signed_in? %>
              <%= link_to image_path(image), method: :delete, data: {confirm: 'Are you sure?'}, class: 'text-danger ' do %>
                <div class="d-flex justify-space-between">
                  <i class="fas fa-trash-alt"></i>
                  <p class="ml-1"> Remove </p>
                </div>
              <% end %>
              <%= link_to edit_image_path(image), class: 'text-secondary mr-3' do %>
                <div class="d-flex justify-space-between">
                  <i class="fas fa-edit"></i>
                  <p class="ml-1"> Edit </p>
                  </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- The Modal -->
<div id="myModal" class="modal">
  <!-- <p>jsfjndfjndjfnndf</p> -->
  <!-- The Close Button -->
  <span class="close">&times;</span>

  <!-- Modal Content (The Image) -->
  <div id="image-container">
    <img class="modal-content" id="img01">
    <h5 class="text-white text-center" id="image_description"></h5>
  </div>
  <!-- Modal Caption (Image Text) -->
  <div id="caption"></div>
</div>

