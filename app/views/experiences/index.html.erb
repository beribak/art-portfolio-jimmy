<div class="container">
  <div class="row">
    <div class="col-12 col-lg-10 offset-lg-1">
      <div class="experience-section">
        <h1>Professional Experience</h1>
        <% @experiences.each do |e| %>
        <div class="experience-card">
          <h5><%= e.show.upcase %></h5>
          <div class="row">
            <div class="col-12 col-lg-6">
              <!-- <h5><%= e.show.upcase %></h5> -->
              <% if e.firm.present? %>
                <p class="m-0 pl-3"><%= e.firm %></p>
              <% end %>
              <p class="m-0 pl-3 pl-lg-5 experience-title"><%= e.position %></p>
            </div>
            <div class="col-6 col-lg-3 d-flex">
              <p class="m-0 pl-3"><%= e.location %></p>
            </div>
            <div class="col-6 col-lg-3 d-flex">
              <p class="m-0"><%= e.start_date.year %>
                <% if e.end_date.present? %>
                  <% if e.end_date.year == Date.today.year %>
                    - present
                  <% else %>
                    - <%= e.end_date.year %>
                  <% end %>
                <% end %>
                </p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
